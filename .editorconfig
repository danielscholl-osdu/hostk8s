# EditorConfig - Cross-editor configuration
# https://editorconfig.org/

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# PowerShell files need CRLF (Windows-specific)
[*.{ps1,psm1,psd1}]
end_of_line = crlf

# Makefiles require tabs
[{Makefile,*.mk}]
indent_style = tab

# Markdown files - preserve trailing spaces (for line breaks)
[*.md]
trim_trailing_whitespace = false

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Shell scripts
[*.{sh,bash}]
indent_size = 2
end_of_line = lf
