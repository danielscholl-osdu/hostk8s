# Kind Cluster Configuration
# Copy this file to .env and customize as needed

# Cluster name (must be unique if running multiple clusters)
CLUSTER_NAME=dev-cluster

# Kubernetes version - pin to specific version for reproducibility
K8S_VERSION=v1.31.0

# Add-on configurations
METALLB_ENABLED=true
INGRESS_ENABLED=true

# Optional: Enable local container registry
# Uncomment the line below and use --profile registry
# REGISTRY_ENABLED=true

# Optional: Enable monitoring stack
# Uncomment the line below and use --profile monitoring  
# MONITORING_ENABLED=true